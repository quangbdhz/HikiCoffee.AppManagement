<Page x:Class="HikiCoffee.AppManager.Views.MainViews.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HikiCoffee.AppManager.Views.MainViews.Pages"
      mc:Ignorable="d" 
      
      xmlns:muc="clr-namespace:HikiCoffee.AppManager.MyUserControl"
      
      Style="{StaticResource PageStyle}"
      d:DesignHeight="686" d:DesignWidth="1205"
      Title="MainPage">

    <GroupBox Header="GroupBox">
        <UniformGrid Rows="7" HorizontalAlignment="Center">
            <Button Content="Button" />

            <RadioButton x:Name="DarkMode" Content="Dark Mode" HorizontalAlignment="Center" Height="20" GroupName="modesSelection" Checked="DarkMode_Checked"/>
            <RadioButton x:Name="LightkMode" Content="Light Mode" HorizontalAlignment="Center" Height="20" IsChecked="True" GroupName="modesSelection" Checked="LightkMode_Checked"/>

        </UniformGrid>
    </GroupBox>
</Page>
